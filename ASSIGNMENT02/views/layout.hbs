<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shift search</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <script src="/javascripts/table.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="m-0">
    <div class="page-container">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-4">
        <div class="container-fluid px-0">
          <a class="navbar-brand fw-bold fs-4" href="/">My Website</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link fs-5 px-3" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-5 px-3" href="/shifts">Shifts</a>
              </li>
              {{#if user}}
                <li class="nav-item">
                  <a class="nav-link fs-5 px-3" href="#">{{user.username}}</a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link fs-5 px-3 text-danger"
                    href="/logout"
                  >Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link fs-5 px-3" href="/login">Log In</a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link fs-5 px-3 text-success"
                    href="/register"
                  >Register</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>

      <!-- Content -->
      <div class="content">
        {{{body}}}
      </div>

      <!-- Footer -->
      <footer class="bg-dark text-light">
        <div class="container-fluid text-center py-5">
          <!-- Social Media Section -->
          <section class="mb-4">
            <h5>Connect with Me</h5>
            <div class="d-flex justify-content-center">
              <a
                href="https://x.com/feldmansasha5"
                target="_blank"
                class="btn btn-outline-light btn-floating m-1"
                role="button"
              >
                <i class="bi bi-twitter"></i>
              </a>
              <a
                href="https://t.me/sashafeldman"
                target="_blank"
                class="btn btn-outline-light btn-floating m-1"
                role="button"
              >
                <i class="bi bi-telegram"></i>
              </a>
              <a
                href="https://www.linkedin.com/in/feldman-alex/"
                target="_blank"
                class="btn btn-outline-light btn-floating m-1"
                role="button"
              >
                <i class="bi bi-linkedin"></i>
              </a>
              <a
                href="https://github.com/feldmansasha"
                target="_blank"
                class="btn btn-outline-light btn-floating m-1"
                role="button"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </section>
        </div>

        <!-- Copyright Section -->
        <div
          class="text-center py-3"
          style="background-color: rgba(0, 0, 0, 0.2);"
        >
          Â© 2024 Alex Feldman
        </div>
      </footer>
    </div>
  </body>
</html>