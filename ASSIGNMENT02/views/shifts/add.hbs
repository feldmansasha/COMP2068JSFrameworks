<form method="POST" class="container p-5 bg-white shadow rounded-3">
  <h2 class="text-center mb-4 text-primary">Add New Shift</h2>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="shiftDate" class="form-label fw-bold">Shift Date</label>
      <input
        type="date"
        name="shiftDate"
        id="shiftDate"
        class="form-control border-primary"
        required
      />
    </div>
    <div class="col-md-6">
      <label for="startTime" class="form-label fw-bold">Start Time</label>
      <input
        type="text"
        name="startTime"
        id="startTime"
        class="form-control border-primary"
        placeholder="e.g., 09:00 AM"
        required
      />
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="endTime" class="form-label fw-bold">End Time</label>
      <input
        type="text"
        name="endTime"
        id="endTime"
        class="form-control border-primary"
        placeholder="e.g., 05:00 PM"
        required
      />
    </div>
    <div class="col-md-6">
      <label for="store" class="form-label fw-bold">Store</label>
      <input
        type="text"
        name="store"
        id="store"
        class="form-control border-primary"
        placeholder="e.g., Downtown Store"
        required
      />
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="location" class="form-label fw-bold">Location</label>
      <input
        type="text"
        name="location"
        id="location"
        class="form-control border-primary"
        placeholder="e.g., 123 Main St"
        required
      />
    </div>
    <div class="col-md-6">
      <label for="yourName" class="form-label fw-bold">Your Name</label>
      <input
        type="text"
        name="yourName"
        id="yourName"
        class="form-control border-primary"
        placeholder="e.g., John Doe"
      />
    </div>
  </div>

  <div class="mb-4">
    <label for="yourPhone" class="form-label fw-bold">Your Phone</label>
    <input
      type="text"
      name="yourPhone"
      id="yourPhone"
      class="form-control border-primary"
      placeholder="e.g., 555-1234"
    />
  </div>

  <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Save Shift</button>
</form>