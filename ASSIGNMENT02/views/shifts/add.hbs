<form method="POST" class="container p-5 bg-white shadow rounded-3">
  <h2 class="text-center mb-4 text-primary">Add New Shift</h2>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="shiftDate" class="form-label fw-bold">Shift Date</label>
      <input
        type="date"
        name="shiftDate"
        id="shiftDate"
        class="form-control border-primary date-cell"
        required
      />
    </div>
    <div class="col-md-6">
      <label for="startTime" class="form-label fw-bold">Start Time</label>
      <select
        name="startTime"
        id="startTime"
        class="form-control border-primary"
        required
      >
        <option value="" disabled selected>Select Start Time</option>
        <option value="10:00 AM">10:00 AM</option>
        <option value="11:00 AM">11:00 AM</option>
        <option value="12:00 PM">12:00 PM</option>
        <option value="1:00 PM">1:00 PM</option>
        <option value="2:00 PM">2:00 PM</option>
        <option value="3:00 PM">3:00 PM</option>
        <option value="4:00 PM">4:00 PM</option>
        <option value="5:00 PM">5:00 PM</option>
        <option value="6:00 PM">6:00 PM</option>
        <option value="7:00 PM">7:00 PM</option>
        <option value="8:00 PM">8:00 PM</option>
      </select>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="endTime" class="form-label fw-bold">End Time</label>
      <select
        name="endTime"
        id="endTime"
        class="form-control border-primary"
        required
      >
        <option value="" disabled selected>Select End Time</option>
        <option value="10:00 AM">10:00 AM</option>
        <option value="11:00 AM">11:00 AM</option>
        <option value="12:00 PM">12:00 PM</option>
        <option value="1:00 PM">1:00 PM</option>
        <option value="2:00 PM">2:00 PM</option>
        <option value="3:00 PM">3:00 PM</option>
        <option value="4:00 PM">4:00 PM</option>
        <option value="5:00 PM">5:00 PM</option>
        <option value="6:00 PM">6:00 PM</option>
        <option value="7:00 PM">7:00 PM</option>
        <option value="8:00 PM">8:00 PM</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="store" class="form-label fw-bold">Store</label>
      <select
        name="store"
        id="store"
        class="form-control border-primary"
        required
      >
        <option value="" disabled selected>Select Brand</option>
        <option value="Chatr">Chatr</option>
        <option value="Fido">Fido</option>
        <option value="Rogers">Rogers</option>
      </select>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <label for="location" class="form-label fw-bold">Location</label>
      <select
        name="location"
        id="location"
        class="form-control border-primary"
        required
      >
        <option value="" disabled selected>Select Location</option>
        <option value="Georgian Mall">Georgian Mall</option>
        <option value="Bayfield">Bayfield</option>
        <option value="Big Bay">Big Bay</option>
        <option value="Park Place">Park Place</option>
        <option value="Cedar Pointe">Cedar Pointe</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="yourName" class="form-label fw-bold">Your Name</label>
      <input
        type="text"
        name="yourName"
        id="yourName"
        class="form-control border-primary"
      />
    </div>
  </div>

  <div class="mb-4">
    <label for="yourPhone" class="form-label fw-bold">Your Phone</label>
    <input
      type="text"
      name="yourPhone"
      id="yourPhone"
      class="form-control border-primary"
    />
  </div>

  <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Save Shift</button>
</form>